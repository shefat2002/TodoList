@model TodoViewModel

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <label asp-for="Todo.Name" class="form-label"></label>
    <input asp-for="Todo.Id" type="hidden" class="form-control"/>
    <input asp-for="Todo.Name" class="form-control/>
    <span asp-validation-for="Todo.Name" class="text-danger"></span>
    <input type="submit" id="form-button" value="Add Todo"/>
</form>